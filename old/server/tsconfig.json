{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "build"
  },

  "include": [
    "./src/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}